{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Node",
    "target": "ES2017",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "declaration": true,
    "noEmit": false,
    "noEmitOnError": false,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "outDir":"dist",
    "baseUrl": "src",
    "strict": true,
    "forceConsistentCasingInFileNames":true,
    "types": ["mocha","node"]
  },
  "exclude": ["node_modules/**/*","dist/**/*"]
}
